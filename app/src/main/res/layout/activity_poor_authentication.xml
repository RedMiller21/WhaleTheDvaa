<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BaseActivityMenu"
        android:background="#222A35"
        android:textColor="#FFFFFF"
>

    <Button
            android:text="?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>

    <Button
            android:text="Back"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/ResetBtn"
            android:layout_marginRight="8dp"/>

    <Button
            android:text="Confirm"
            android:layout_height="wrap_content"
            android:id="@+id/ConfirmBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/ResetBtn"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
            android:text="Reset"
            android:layout_height="wrap_content"
            android:id="@+id/ResetBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/HintBtn"
            android:background="#4472C4"
            android:textColor="#FFFFFF" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/InformationBtn" android:layout_marginRight="8dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad4" app:layout_constraintEnd_toStartOf="@+id/NumPad2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad3" app:layout_constraintStart_toEndOf="@+id/NumPad2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad6"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad7" app:layout_constraintEnd_toStartOf="@+id/NumPad5"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad9" app:layout_constraintStart_toEndOf="@+id/NumPad5"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad7"
            app:layout_constraintEnd_toStartOf="@+id/NumPad8"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/NumPad8"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad8" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad9" app:layout_constraintStart_toEndOf="@+id/NumPad8" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/NumPad8"/>
    <TextView
            android:text="Poor Authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PATitle" android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/HintBtn"/>
    <TextView
            android:text="----"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PinOutput" android:textColor="#FFFFFF"
            android:textSize="30sp" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/PATitle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/NumPad2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>