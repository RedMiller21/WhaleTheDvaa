<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222A35"
        android:textColor="#FFFFFF"
>

    <Button
            android:text="Back"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ResetBtn" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="Reset"
            android:layout_height="wrap_content"
            android:id="@+id/ResetBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/PlusBtn"/>
    <Button
            android:text="Hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HintBtn"
            android:background="#4472C4"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad5"
            app:layout_constraintStart_toEndOf="@+id/NumPad1" android:layout_marginStart="8dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad6" app:layout_constraintStart_toEndOf="@+id/NumPad2"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad8"
            app:layout_constraintStart_toEndOf="@+id/NumPad4" android:layout_marginStart="8dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad6"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad9" app:layout_constraintStart_toEndOf="@+id/NumPad5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad7"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad8"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad0"
            app:layout_constraintStart_toEndOf="@+id/NumPad7" android:layout_marginStart="8dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad9"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad0" app:layout_constraintStart_toEndOf="@+id/NumPad8"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Poor Authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PATitle" android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/HintBtn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PinOutput" android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/FlagText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/NumPad2"
            android:textColorHint="#FFFFFF"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FlagText" android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PATitle" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumPad0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ResetBtn"
            app:layout_constraintStart_toEndOf="@+id/NumPad7" android:layout_marginStart="8dp"/>
    <Button
            android:text="Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InstructionsBtn" android:background="#4472C4"
            android:textColor="#FFFFFF" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Flags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flagsBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textColor="#FFFFFF"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EqualsBtn"
            app:layout_constraintStart_toEndOf="@+id/NumPad0"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ResetBtn"/>
    <Button
            android:text="รท"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DivideBtn" app:layout_constraintStart_toEndOf="@+id/NumPad3"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad6"/>
    <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MultiBtn" app:layout_constraintStart_toEndOf="@+id/NumPad6"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NumPad9"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MinusBtn" app:layout_constraintStart_toEndOf="@+id/NumPad9"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/EqualsBtn" android:text="-"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PlusBtn" app:layout_constraintStart_toEndOf="@+id/EqualsBtn"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/ResetBtn"/>

</android.support.constraint.ConstraintLayout>