<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.paulb.whale2fa.tfaKiller"
        android:background="#222A35"
        android:textColor="#FFFFFF"
>

    <Button
            android:id="@+id/btnCode"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="108dp"
            android:background="#4472C4"
            android:text="Enter"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter 2FA Code"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/btnCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"
            app:layout_constraintVertical_bias="0.252" android:layout_marginRight="24dp"/>

    <TextView
            android:id="@+id/lblCode"
            android:layout_width="72dp"
            android:layout_height="38dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:text="Code:"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnCode"
            app:layout_constraintEnd_toStartOf="@+id/txtCode"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblEmail"
            app:layout_constraintVertical_bias="0.431" android:layout_marginLeft="76dp"
            android:layout_marginRight="5dp"/>

    <EditText
            android:id="@+id/txtEmail"
            android:layout_width="197dp"
            android:layout_height="47dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="84dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="victim@whalemail.sea"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblEmail"
            app:layout_constraintTop_toBottomOf="@+id/InformationBtn" android:layout_marginRight="8dp"
            android:layout_marginLeft="2dp"/>

    <TextView
            android:id="@+id/lblEmail"
            android:layout_width="161dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="8dp"
            android:text="Email address:"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txtCode"
            app:layout_constraintEnd_toStartOf="@+id/txtEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" android:layout_marginLeft="16dp"
            android:layout_marginRight="2dp"/>

    <Button
            android:text="?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>

    <Button
            android:text="Back"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#203864" android:textColor="#FFFFFF" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"/>
    <Button
            android:text="Hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/HintBtn"
            android:background="#4472C4"
            android:textColor="#FFFFFF" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/InformationBtn" android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>