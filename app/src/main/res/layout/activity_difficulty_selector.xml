<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DifficultySelector"
        android:background="#222A35">

    <Button
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Information" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>
    <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@drawable/whaleasy"
            android:id="@+id/whaleasy"
            app:layout_constraintBottom_toTopOf="@+id/Continue" app:layout_constraintEnd_toEndOf="@+id/WhaleMed"
            android:layout_marginEnd="110dp" android:layout_marginRight="110dp"
            android:background="@android:color/transparent" tools:scaleType="fitCenter" tools:padding="0dp"/>

    <ImageButton
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@drawable/whalemedi"
            android:id="@+id/WhaleMed" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toTopOf="@+id/Continue" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/transparent" tools:scaleType="fitCenter" tools:padding="0dp"/>

    <ImageButton android:layout_width="170dp"
                 android:layout_height="170dp"
                 app:srcCompat="@drawable/killerwhale"
                 android:id="@+id/KillerWhale"
                 app:layout_constraintBottom_toTopOf="@+id/Continue"
                 app:layout_constraintStart_toStartOf="@+id/WhaleMed"
                 android:layout_marginLeft="110dp" android:layout_marginStart="110dp"
                 android:background="@android:color/transparent" tools:scaleType="fitCenter" tools:padding="0dp"/>
    <Button
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Continue" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/Continue"
            app:layout_constraintStart_toStartOf="@+id/Continue"
            android:background="#203864" android:textColor="#FFFFFF"/>
    <TextView
            android:text="Select Security Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SelectionText"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/Continue"
            app:layout_constraintStart_toStartOf="@+id/Continue" android:textSize="24sp"
            android:textStyle="bold|italic" android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/WhaleMed"
            android:textAllCaps="false"/>
    <TextView
            android:text="Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EasyText"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/whaleasy" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/whaleasy" android:layout_marginLeft="8dp"
            android:layout_marginTop="155dp" app:layout_constraintTop_toTopOf="@+id/whaleasy"/>
    <TextView
            android:text="Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MedText"
            app:layout_constraintEnd_toEndOf="@+id/WhaleMed"
            app:layout_constraintStart_toStartOf="@+id/WhaleMed" android:textStyle="bold|italic"
            android:textColor="#FFFFFF" android:textSize="24sp" android:layout_marginTop="155dp"
            app:layout_constraintTop_toTopOf="@+id/WhaleMed" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Killer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/KillerText" android:textColor="#FFFFFF"
            android:textSize="24sp" android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/KillerWhale"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="155dp" app:layout_constraintTop_toTopOf="@+id/KillerWhale"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="VulnHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VulnText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/SelectionText"/>

</android.support.constraint.ConstraintLayout>