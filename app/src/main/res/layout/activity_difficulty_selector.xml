<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DifficultySelector"
        android:background="#222A35">

    <Button
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>




    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Select Security Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SelectionText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/VulnText"/>


    <TextView
            android:text="VulnHere"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:id="@+id/VulnText"
            android:textColor="#FFFFFF" android:textSize="24sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/InformationBtn"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center|fill" android:id="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="View Mitigations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mtgtBtn"
                    android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/BackBtn" app:layout_constraintVertical_bias="0.74"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="Update Progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/progBtn"
                    android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/BackBtn" app:layout_constraintVertical_bias="0.74"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SelectionText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <ImageButton
                            app:srcCompat="@drawable/whalemedi"
                            android:id="@+id/whaleMed"
                            android:background="@android:color/transparent"
                            tools:padding="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" android:scaleType="fitCenter"
                            tools:layout_editor_absoluteY="263dp"
                            tools:layout_editor_absoluteX="306dp" android:layout_width="wrap_content"
                            android:layout_gravity="center"/>
                    <TextView
                            android:text="Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/medText"
                            android:textStyle="bold|italic"
                            android:textColor="#FFFFFF" android:textSize="24sp"
                            tools:layout_editor_absoluteY="433dp" tools:layout_editor_absoluteX="78dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <ImageButton
                            app:srcCompat="@drawable/whaleasy"
                            android:id="@+id/whaleasy" android:layout_height="wrap_content"
                            android:background="@android:color/transparent" tools:padding="0dp"
                            android:adjustViewBounds="true" android:scaleType="fitCenter"
                            tools:layout_editor_absoluteY="510dp"
                            tools:layout_editor_absoluteX="44dp" android:layout_width="wrap_content"
                            android:layout_gravity="center"/>
                    <TextView
                            android:text="Easy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/EasyText"
                            android:textStyle="bold|italic"
                            android:textColor="#FFFFFF" android:textSize="24sp"
                            tools:layout_editor_absoluteY="433dp" tools:layout_editor_absoluteX="78dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <ImageButton
                            app:srcCompat="@drawable/killerwhale"
                            android:id="@+id/killerWhale"
                            android:background="@android:color/transparent"
                            tools:padding="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" android:scaleType="fitCenter"
                            tools:layout_editor_absoluteY="509dp"
                            tools:layout_editor_absoluteX="551dp" android:layout_width="wrap_content"
                            android:layout_gravity="center"/>
                    <TextView
                            android:text="Killer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/killerText"
                            android:textStyle="bold|italic"
                            android:textColor="#FFFFFF" android:textSize="24sp"
                            tools:layout_editor_absoluteY="433dp" tools:layout_editor_absoluteX="78dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--TODO: change vuln here-->

</android.support.constraint.ConstraintLayout>