<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DifficultySelector"
        android:background="#222A35">

    <Button
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp" app:srcCompat="@drawable/whaleasy"
            android:id="@+id/whaleasy"
            android:background="@android:color/transparent" tools:padding="0dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@+id/WhaleMed" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="2dp"
            android:adjustViewBounds="true" android:scaleType="fitCenter"/>

    <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp" app:srcCompat="@drawable/whalemedi"
            android:id="@+id/WhaleMed"
            android:background="@android:color/transparent" tools:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/SelectionText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/KillerWhale" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/whaleasy" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn" android:layout_marginBottom="80dp"
            android:adjustViewBounds="true" android:scaleType="fitCenter"/>

    <ImageButton android:layout_width="160dp"
                 android:layout_height="160dp"
                 app:srcCompat="@drawable/killerwhale"
                 android:id="@+id/KillerWhale"
                 android:background="@android:color/transparent" tools:padding="0dp"
                 android:layout_marginTop="100dp"
                 app:layout_constraintTop_toTopOf="@+id/WhaleMed" android:layout_marginEnd="8dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="2dp"
                 android:scaleType="fitCenter" android:adjustViewBounds="true"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Select Security Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SelectionText"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:textAllCaps="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/VulnText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EasyText"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/whaleasy" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/whaleasy" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MedText"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/WhaleMed"
            app:layout_constraintEnd_toEndOf="@+id/BackBtn"
            app:layout_constraintStart_toStartOf="@+id/BackBtn" android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>
    <TextView
            android:text="Killer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/KillerText" android:textColor="#FFFFFF"
            android:textSize="24sp" android:textStyle="bold|italic"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/MedText" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/KillerWhale"/>
    <TextView
            android:text="VulnHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VulnText"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="#FFFFFF" android:textSize="24sp"/>

    <!--TODO: change vuln here-->

</android.support.constraint.ConstraintLayout>