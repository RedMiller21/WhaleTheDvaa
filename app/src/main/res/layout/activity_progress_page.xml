<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProgressPage"
        android:background="#222A35">

    <Button
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textColor="#FFFFFF"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TotalKiller"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:progress="25"
            tools:background="@android:color/holo_green_dark"
            android:indeterminate="true" android:visibility="visible" tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/EnterFlagBtn"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TotalMedium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/TotalKiller"
            android:progress="50"
            tools:background="@android:color/holo_orange_dark" android:indeterminate="true"
            android:visibility="visible" tools:visibility="visible"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/EasyTotal"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/TotalMedium" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:progress="75"
            tools:background="@android:color/holo_red_dark"
            tools:visibility="visible" android:visibility="visible" android:max="100"
            android:angle="0"
            android:startColor="@android:color/transparent"
            android:type="sweep" android:indeterminate="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TotalProgress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="130dp"
            app:layout_constraintBottom_toTopOf="@+id/EasyTotal"
            android:progress="100"
            tools:background="@color/design_default_color_primary"
            android:startColor="#FFFFFF"
            android:endColor="#FFFFFF"/>
    <TextView
            android:text="Vulnerabilities"
            android:layout_height="wrap_content"
            android:id="@+id/Title" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textAllCaps="true" android:textColor="#FFFFFF" android:textSize="30sp"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/Title2"/>
    <TextView
            android:text="Exploited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Title2" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/TotalProgress" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="30sp" android:textStyle="bold"
            android:textAllCaps="true" android:textColor="#FFFFFF"/>
    <Button
            android:text="Enter\nFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EnterFlagBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textColor="#FFFFFF"/>


</android.support.constraint.ConstraintLayout>
