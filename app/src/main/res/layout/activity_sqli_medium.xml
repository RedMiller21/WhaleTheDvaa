<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222A35"
        android:textColor="#FFFFFF"
>

    <Button
            android:text="Flags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flagsBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textColor="#FFFFFF"/>
    <Button
            android:text="Info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>

    <Button
            android:text="Back"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#203864" android:textColor="#FFFFFF" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"/>

    <Button
            android:text="Hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HintBtn"
            android:background="#4472C4"
            android:textColor="#FFFFFF" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="151dp"
            android:layout_height="41dp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="SQL Injection"
            android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/HintBtn"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkcrypto"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/BackBtn" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/input" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="161dp" android:layout_marginRight="161dp"/>
    <TextView
            android:layout_width="383dp"
            android:layout_height="368dp"
            android:id="@+id/txtSuccessMsg" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:textStyle="bold" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/InformationBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSuccessMsg" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/SQL_Login" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/input" android:textColorHint="@color/colorWhite">

        <android.support.design.widget.TextInputEditText
                android:layout_width="334dp"
                android:layout_height="43dp"
                android:hint="Enter the encryption algorithm used" android:id="@+id/cryptoEntry"
                android:textColor="@color/colorWhite"/>
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>