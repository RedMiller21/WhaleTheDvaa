<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222A35"
        tools:context=".TheWhala"
>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="380dp" app:srcCompat="@drawable/whale_main"
            android:id="@+id/TheWhale"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="WhaleDesign"
            android:background="@android:color/transparent"/>
    <Button
            android:text="Instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/InstructionsBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/GetSplashing"
            app:layout_constraintStart_toStartOf="@+id/GetSplashing"
            android:background="#4472C4" android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/WhaleDefined"/>

    <Button
            android:text="Get Splashing"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/GetSplashing" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/InstructionsBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textStyle="bold"
            android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="White Hat Application for Learning and Evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WhaleDefined"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/TheWhale" android:typeface="normal"
            android:textAlignment="center" android:fontFamily="@font/pt_mono"/>

</android.support.constraint.ConstraintLayout>