<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DifficultySelector"
        android:background="#222A35">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/readingTitle" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Further Reading"
            android:textColor="#FFFFFF" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="  Poor Authentication  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPoorAuth"
            android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/BackBtn"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/readingTitle"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn"
            android:background="#203864" android:textColor="#FFFFFF"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>


    <Button
            android:text="  Hard Coding  "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHardCoding"
            android:background="#4472C4" android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/btnInsecureLogging"
            app:layout_constraintStart_toStartOf="@+id/btnInsecureLogging" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInsecureLogging"/>
    <Button
            android:text="  Insecure Logging  "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnInsecureLogging"
            android:background="#4472C4" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/btnPoorAuth"
            app:layout_constraintEnd_toEndOf="@+id/btnPoorAuth" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPoorAuth"/>
    <Button
            android:text="2 FA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn2FA"
            android:background="#4472C4" android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/btnSQLi" app:layout_constraintStart_toStartOf="@+id/btnSQLi"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/btnSQLi"/>
    <Button
            android:text="SQLi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSQLi"
            android:background="#4472C4" android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/btnPoorAuth"
            app:layout_constraintStart_toStartOf="@+id/btnPoorAuth" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPoorAuth"/>


</android.support.constraint.ConstraintLayout>