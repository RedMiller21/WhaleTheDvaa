<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VulnSelection"
        android:background="#222A35"
        android:textColor="#FFFFFF">

    <Button
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InformationBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:background="#4472C4" android:textColor="#FFFFFF"/>
    <Button
            android:text="View Progression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ViewProgression" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textStyle="bold"
            android:textColor="#FFFFFF" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Hardcoding\nIssues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln1"
            app:layout_constraintEnd_toEndOf="@+id/ViewProgression"
            app:layout_constraintStart_toStartOf="@+id/ViewProgression" android:background="#4472C4"
            android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.476"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/SelectionText"/>
    <Button
            android:text="Sql\ninjection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln2"
            app:layout_constraintEnd_toStartOf="@+id/Vuln7"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/Vuln3" app:layout_constraintHorizontal_bias="0.434"/>
    <Button
            android:text="Two-Factor\nAuthentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln3"
            android:background="#4472C4" android:textColor="#FFFFFF" android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/Vuln5"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="364dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Insecure\nTokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln4" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/Vuln7" android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:visibility="invisible"/>

    <Button
            android:text="Insecure \nLogging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln6"
            app:layout_constraintStart_toEndOf="@+id/Vuln7"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:background="#4472C4" android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/Vuln5"
            app:layout_constraintHorizontal_bias="0.466"/>
    <Button
            android:text="Poor\nAuthentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Vuln5"
            android:background="#4472C4" android:textColor="#FFFFFF" android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="72dp"
            android:layout_marginBottom="364dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Insecure\nData\nStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vuln7"
            app:layout_constraintEnd_toEndOf="@+id/ViewProgression"
            app:layout_constraintStart_toStartOf="@+id/ViewProgression" android:background="#4472C4"
            android:textColor="#FFFFFF" android:layout_marginTop="392dp" app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
    <TextView
            android:text="Select Vulnerability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SelectionText"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/ViewProgression"
            app:layout_constraintStart_toStartOf="@+id/ViewProgression" android:textSize="24sp"
            android:textStyle="italic" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackBtn" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="#4472C4" android:textColor="#FFFFFF"/>
</android.support.constraint.ConstraintLayout>